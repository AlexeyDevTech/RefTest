<Window x:Class="RefTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RefTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1400">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition />
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Label Content="COM-Порт" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding COM}"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Button Command="{Binding ConnectCommand}" Height="40" Margin="5" Content="Подключить"/>
                    <Button Command="{Binding DisconnectCommand}" Height="40" Margin="5" Content="Отключить"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel>
                    
                    <TextBox/>
                    <TextBox/>
                    <TextBox/>
                    <TextBox/>
                    <TextBox/>
                    <TextBox/>
                    <TextBox/>
                    <TextBox/>
                    <TextBox/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <Button Content="Выполнить очередь команд" FontSize="26" Height="45" Cursor="Hand"/>
            </Grid>


        </Grid>
        <Grid Grid.Column="1">
            
        </Grid>
    </Grid>
    
    
    
</Window>
